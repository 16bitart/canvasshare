<% include ../partials/header %>

<div class="container g-font">
  <div class="row">
    <header class="header-center">
      <h1>Edit <%= canvas.name %></h1>
    </header>
    
    <form action="/gallery/<%= canvas._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">What should we call this Canvas?</label>
      <input class="form-control" type="text" name="canvas[name]" value="<%= canvas.name %>">
    </div>
    <div class="form-group">
      <label for="description">Write us a short description about your piece.</label>
      <textarea class="form-control" name="canvas[description]"><%= canvas.description %></textarea>
    </div>
    <div class="form-group">
      <label for="image">Put the URL of your image here:</label>
      <input class="form-control" type="text" name="canvas[image]" placeholder="Image URL" value="<%= canvas.image %>">
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-prime">Update Canvas</button>
    </div>
    </form>
  </div>
</div>

<% include ../partials/footer %>