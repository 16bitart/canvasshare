<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to the Gallery</h1>
    <form class="form-inline" action="/gallery" method="GET">
      <div class="form-group">
        <input class="form-control" type="text" name="search" placeholder="Search Gallery">
        <input class="btn btn-default" type="submit" value="Search">
      </div>
    </form>
  </header>
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
      <h3>Don't forget to thank the artist by donating!</h3>
    </div>
    <% canvas.forEach((canvas) => { %>
      <article class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= canvas.image %>" alt="<%= canvas.description %>">
          <div class="caption">
            <h4 class="thumb-name"><%= canvas.name %></h4>
          </div>
          <p><a href="/gallery/<%= canvas._id %>" class="btn btn-prime">View</a></p>
        </div>
      </article>
    <% }); %>      
  </div>
</div>
</div>

<% include ../partials/footer %>